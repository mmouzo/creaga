---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import ContentSection from '../components/ContentSection.astro';
import ImageDisplay from '../components/ImageDisplay.astro';

const pageTitle = "Inicio";

const mainSections = [
  { title: "Memoria Descriptiva y Justificativa", href: "/memoria-descriptiva", description: "Descripción general del proyecto, antecedentes, emplazamiento y objetivos." },
  { title: "Memoria Urbanística", href: "/memoria-urbanistica", description: "Análisis del planeamiento urbano, normativa aplicable y justificación urbanística." },
  { title: "Memoria Estructural", href: "/memoria-estructural", description: "Detalles del diseño estructural, materiales, cálculos y cumplimiento normativo." },
  { title: "Memoria Constructiva", href: "/memoria-constructiva", description: "Procesos constructivos, actuaciones previas, y cumplimiento del CTE." },
  { title: "Presupuesto y Pliegos", href: "/presupuesto", description: "Desglose económico del proyecto, mediciones y pliego de condiciones." }
];
---

<Layout title={pageTitle} currentPage="/">
  <div class="hero-section">
    <div class="hero-image-container">
      <ImageDisplay
        src="/images/image6.png"
        alt="Portada CRIAGA"
        isCover={true}
        customClass="hero-actual-image"
      />
    </div>
    <h1>CRIAGA</h1>
    <h2>Centro de Cría de Razas Galegas</h2>
    <p class="project-author">Proyecto Fin de Máster de Pedro Citoula Pérez</p>
  </div>

  <ContentSection title="Bienvenido a la Documentación del Proyecto CRIAGA" id="bienvenida">
    <p>
      Este sitio web presenta la documentación técnica completa del proyecto "CRIAGA - Centro de Cría de Razas Galegas".
      El objetivo es transformar la memoria original en una experiencia web moderna, interactiva y accesible,
      manteniendo la fidelidad con la información y el diseño del documento fuente.
    </p>
    <p>
      Navegue a través de las diferentes secciones utilizando el menú principal o los accesos directos a continuación
      para explorar en detalle cada aspecto del proyecto.
    </p>
  </ContentSection>

  <ContentSection title="Secciones Principales de la Memoria" id="secciones">
    <div class="sections-grid">
      {mainSections.map(section => (
        <a href={section.href} class="section-card">
          <h3>{section.title}</h3>
          <p>{section.description}</p>
          <span class="read-more">Leer más &rarr;</span>
        </a>
      ))}
    </div>
  </ContentSection>

</Layout>

<style>
  .hero-section {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
  }

  .hero-image-container {
    width: 100%;
    max-height: 400px; /* Ajusta la altura máxima como necesites */
    overflow: hidden; /* Asegura que la imagen no se desborde */
    margin-bottom: 1.5rem;
    border-radius: 8px;
    box-shadow: 0 8px 16px rgba(0,0,0,0.15);
  }

  /* Estilos específicos para la imagen dentro de .hero-image-container */
  .hero-image-container :global(.hero-actual-image img) {
    width: 100%;
    height: 100%; /* Hace que la imagen intente llenar el contenedor */
    object-fit: cover; /* Cubre el área, puede recortar la imagen */
    object-position: center 15%; /* Ajusta para mostrar la parte superior de la imagen */
    border-radius: 8px; /* Asegura que la imagen también tenga bordes redondeados */
    box-shadow: none; /* La sombra ya está en el contenedor */
  }


  .hero-section h1 {
    font-size: 3.5rem;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
    margin-top: 1rem;
  }

  .hero-section h2 {
    font-size: 1.8rem;
    color: var(--color-text-secondary);
    font-weight: 400;
    margin-bottom: 0.5rem;
  }

  .project-author {
    font-size: 1.1rem;
    color: var(--color-text-secondary);
  }

  .sections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .section-card {
    display: block;
    background-color: #fff;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1.5rem;
    text-decoration: none;
    color: var(--color-text-primary);
    transition: box-shadow 0.3s ease, transform 0.3s ease;
  }

  .section-card:hover {
    box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    transform: translateY(-5px);
    text-decoration: none;
  }

  .section-card h3 {
    margin-top: 0;
    color: var(--color-primary);
    font-size: 1.4rem;
  }

  .section-card p {
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    margin-bottom: 1rem;
  }

  .read-more {
    font-weight: bold;
    color: var(--color-secondary);
  }
</style>
