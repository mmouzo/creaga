---
export interface Props {
  title?: string;
  className?: string;
  hover?: boolean;
}

const { title, className = '', hover = true } = Astro.props;
const hoverClass = hover ? 'hover:transform hover:-translate-y-1 hover:shadow-lg' : '';
---

<div class={`bg-white border border-criaga-gray-light rounded-lg shadow-sm transition-all duration-300 ${hoverClass} ${className}`}>
  {title && (
    <div class="px-6 py-4 border-b border-criaga-gray-light">
      <h3 class="text-xl font-semibold font-serif text-criaga-red">{title}</h3>
    </div>
  )}
  <div class="p-6">
    <slot />
  </div>
</div>