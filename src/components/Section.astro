---
export interface Props {
  id: string;
  title: string;
  subtitle?: string;
  className?: string;
}

const { id, title, subtitle, className = '' } = Astro.props;
---

<section id={id} class={`mb-24 animate-fade-in ${className}`}>
  <div class="text-center mb-12">
    <h2 class="text-4xl font-bold font-serif text-criaga-red mb-4">{title}</h2>
    {subtitle && (
      <p class="max-w-4xl mx-auto text-lg text-gray-600 leading-relaxed">
        {subtitle}
      </p>
    )}
  </div>
  <slot />
</section>