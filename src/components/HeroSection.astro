---
// src/components/HeroSection.astro
interface Props {
  title: string;
  subtitle?: string;
  imageUrl?: string; // Optional image URL
  ctaText?: string;
  ctaLink?: string;
}

const {
  title,
  subtitle,
  imageUrl = "/placeholder-hero.jpg", // Default placeholder
  ctaText = "Explorar Proyecto",
  ctaLink = "/proyecto"
} = Astro.props;
---

<div class="hero min-h-[60vh] bg-base-200" style={imageUrl ? `background-image: url(${imageUrl});` : ''}>
  <div class="hero-overlay bg-opacity-60"></div>
  <div class="hero-content text-center text-neutral-content">
    <div class="max-w-md">
      <h1 class="mb-5 text-5xl font-bold text-white">{title}</h1>
      {subtitle && <p class="mb-5 text-lg text-gray-200">{subtitle}</p>}
      {ctaText && ctaLink && (
        <a href={ctaLink} class="btn btn-primary">{ctaText}</a>
      )}
    </div>
  </div>
</div>

<style>
  /* You can add component-specific styles here if needed,
     though Tailwind and DaisyUI should cover most cases. */
  .hero {
    background-size: cover;
    background-position: center;
  }
</style>
