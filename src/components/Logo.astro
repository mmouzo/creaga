---
export interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl';
  className?: string;
  showText?: boolean;
}

const { size = 'md', className = '', showText = true } = Astro.props;

const sizeClasses = {
  sm: 'h-8 w-auto',
  md: 'h-12 w-auto',
  lg: 'h-16 w-auto',
  xl: 'h-24 w-auto'
};

const textSizeClasses = {
  sm: 'text-lg',
  md: 'text-xl',
  lg: 'text-2xl',
  xl: 'text-3xl'
};
---

<div class={`flex items-center space-x-3 ${className}`}>
  <img 
    src="/images/image127.png" 
    alt="CRIAGA - Centro de Cría de Razas Galegas" 
    class={`${sizeClasses[size]} object-contain transition-transform duration-300 hover:scale-105`}
    loading="eager"
  />
  {showText && (
    <div class="flex flex-col">
      <h1 class={`font-bold font-serif text-criaga-red ${textSizeClasses[size]} leading-tight`}>
        CRIAGA
      </h1>
      {size !== 'sm' && (
        <p class="text-xs text-gray-600 font-medium">
          Centro de Cría de Razas Galegas
        </p>
      )}
    </div>
  )}
</div>