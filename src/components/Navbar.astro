---
// src/components/Navbar.astro
const navLinks = [
  { href: "/", text: "Inicio" },
  { href: "/proyecto", text: "Proyecto" },
  { href: "/memorias", text: "Memorias Técnicas" },
  { href: "/galeria", text: "Galería" },
  // { href: "/contacto", text: "Contacto" }, // Optional
];
---
<div class="navbar bg-base-100 shadow-md sticky top-0 z-50">
  <div class="navbar-start">
    <div class="dropdown">
      <label tabindex="0" class="btn btn-ghost lg:hidden">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" /></svg>
      </label>
      <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
        {navLinks.map(link => (
          <li><a href={link.href} class="text-base-content hover:text-primary">{link.text}</a></li>
        ))}
      </ul>
    </div>
    <a href="/" class="btn btn-ghost normal-case text-xl text-primary">
      CRIAGA {/* Placeholder for logo/title */}
    </a>
  </div>
  <div class="navbar-center hidden lg:flex">
    <ul class="menu menu-horizontal px-1">
      {navLinks.map(link => (
        <li><a href={link.href} class="text-base-content hover:text-primary">{link.text}</a></li>
      ))}
    </ul>
  </div>
  <div class="navbar-end">
    {/* Possible future elements like a theme switcher or language selector */}
  </div>
</div>
